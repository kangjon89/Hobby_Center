@model User

<div class="text-center">

    
    <h1>Register to this Cool Site!</h1>
    
    <form asp-action="Register" asp-controller="Home" method="POST">
        <div class="form-group">
            <label asp-for="Name"></label>
            <span asp-validation-for="Name"></span>
            <input type="text" asp-for="Name" class="form-control">
        </div>
        
        <div class="form-group">
            <label asp-for="Email"></label>
            <span asp-validation-for="Email"></span>
            <input type="email" asp-for="Email" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <span asp-validation-for="Password"></span>
            <input type="password" asp-for="Password" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="Confirm"></label>
            <span asp-validation-for="Confirm"></span>
            <input type="password" asp-for="Confirm" class="form-control">
        </div>
        <input type="submit" value="Register" class="btn btn-success">
    </form>
    
</div>
